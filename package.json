{
  "name": "@andyrmitchell/trowser",
  "version": "0.1.6",
  "description": "Run a test script in the browser",
  "bin": {
    "trowser": "./dist/cli.js"
  },
  "type": "commonjs",
  "main": "./dist/cli.js",
  "files": [
    "dist",
    "static",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build_release": "npm run build_prepare && np",
    "build": "tsup",
    "pkglint": "./build/publint_pipeable.sh",
    "build_prepare": "npm run pkglint && npm run build",
    "prepublishOnly": "npm run build_prepare",
    "run_local": "npx tsup && ./dist/cli.js --file ./test/basic.ts",
    "run_local:watch": "npx tsup && ./dist/cli.js --file ./test/basic.ts --watch",
    "test": ""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/andymitchell/trowser"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "esbuild": "^0.20.0",
    "fs-extra": "^11.2.0",
    "open": "^10.0.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
